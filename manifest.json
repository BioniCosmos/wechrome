{
  "name": "WeChrome",
  "version": "2.0.0",
  "description": "Unblock web version of WeChat",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://wx.qq.com/*",
    "https://web.wechat.com/*",
    "https://wx2.qq.com/*",
    "https://wx8.qq.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "manifest_version": 3
}
